<div class="container">
  <div class="row">

    <div class="col-md-8">
      <% @stories.each do |story| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= story.title %></h3>
          </div>
          <div class="panel-body">
            <%= story.body %>
            <hr>
            <p class="text-right">
              <%= link_to "記事を読む", story_path(story), class: "btn btn-primary" %>
            </p>
          </div>
          <div class="panel-footer">
            <%= link_to like_story_path(story), method: :put, class: "btn btn-link btn-xs" do %>
              <i class="fa fa-2x fa-thumbs-o-up text-info"></i>
            <% end %>
            <span> <%= story.get_upvotes.size %></span>
            <%= link_to dislike_story_path(story), method: :put, class: "btn btn-xs btn-link" do %>
              <i class="fa fa-2x fa-thumbs-o-down text-danger"></i>
            <% end %>
            <span> <%= story.get_downvotes.size %></span>
            <a href="#" class="btn btn-link btn-xs"><i class="fa fa-2x fa-comments-o"></i> <%= story.comments.count %> comments</a>

            <span class="pull-right"><small>作者: <%= story.user.name %> | カテゴリー: <%= story.category.c_name %></small></span>
          </div>
        </div>
      <% end %>

      <nav class="text-center">
        <%= paginate @stories %>
      </nav>
    </div>

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">カテゴリー</h3>
        </div>
        <div class="panel-body">
          <% Category.all.each do |category| %>
            <%= link_to category.c_name, category_path(category) %>
            <hr>
          <% end %>
        </div>
        <div class="panel-footer">
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="text-center"><%= image_tag("connpass_logo_2.png", :size => "300x60", :alt => "アイコン") %></h3>
        </div>
        <div class="panel-body">

        </div>
      </div>
    </div>
  </div>
</div>
