<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">新規記事作成</h3>
        </div>
        <div class="panel-body">
          <%= simple_form_for @story do |f| %>
            <div class="form-group">
              <%= f.input :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.input :body, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :category_id, "categories" %>
              <%= f.select(:category_id, Category.all.map{ |f| [f.c_name, f.id] }, {}, class: "form-control", id: "select") %>
            </div>
            <div class="form-group">
              <%= f.button :submit, class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
        <div class="panel-footer clearfix">
          <%= link_to "Back", root_path, class: "btn btn-default pull-right" %>
        </div>
      </div>
    </div>
  </div>
</div>
